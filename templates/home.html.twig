{% extends 'base.html.twig' %}

{% block title %}Snowtricks{% endblock %}

{%  block body %}

    <figure class="image is-2by1">
        <img src="/images/cover_snow.jpg" alt="snowboard jump photo" title="Snowboard jump">
    </figure>

    <section class="hero">
        <div class="hero-body">
            <div class="container has-text-centered">
                <h1 class="title">
                    Neige
                    Passion
                    Partage
                </h1>
                <h2 class="subtitle">
                    Rejoins la plus grande communaut√© d'adeptes du snowboard !
                </h2>
                <span class="icon">
                            <i class="far fa-snowflake" aria-hidden="true"></i>
                </span>
                <span class="icon">
                            <i class="far fa-snowflake" aria-hidden="true"></i>
                </span>
                <span class="icon">
                            <i class="far fa-snowflake" aria-hidden="true"></i>
                </span>
            </div>
        </div>
    </section>

    <div class="tile is-ancestor">
    {% for trick in tricks %}
        <div class="tile is-2">
            <figure class="image is-96x96">
              <img src="{{ trick.photo }} ">
            </figure>
            <p class="title">{{ trick.trick_name}}</p>
            <a href="/del">
                <span class="icon">
                    <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                </span>
            </a>
            <a href="/update">
                <span class="icon">
                    <i class="fas fa-trash" aria-hidden="true"></i>
                </span>
            </a>
        </div>

        {% else %}
        <p> Pas de trick </p>

    {% endfor %}
    </div>

{% endblock %}
